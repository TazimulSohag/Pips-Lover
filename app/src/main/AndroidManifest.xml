<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.banglabs.pips_lover">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pips_lover"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pips_lover_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PipsLover">
        <activity android:name=".activity.ContactActivity"
            />
        <activity android:name=".activity.PrivacyPolicy" />
        <activity android:name=".activity.RiskRatioActivity" />
        <activity android:name=".activity.ProfileActivity" />
        <activity android:name=".activity.ReferenceMonitorActivity" />
        <activity android:name=".activity.ChartActivity" />
        <activity android:name=".activity.Registration" />
        <activity android:name=".activity.ProvideSignal" />
        <activity android:name=".activity.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity"
            android:launchMode="singleInstance"/>
    </application>

</manifest>